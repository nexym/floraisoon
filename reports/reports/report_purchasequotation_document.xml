<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_purchasequotation_document" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table" position="after">
            <div class="row">
            <div class="text-left" style="page-break-inside: avoid;">
                <br/>
                <br/>
                <br/>
                <img
                        t-if="o.qr_code"
                        style="display:block;margin:10% auto 0 auto;"
                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.qr_code, 70, 70)"
                />
            </div>
            </div>
        </xpath>

    </template>

    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">

         <xpath expr='//div[@t-if="doc.signature"]' position="after">
            <div class="row">
            <div class="text-left" style="page-break-inside: avoid;">
                <br/>
                <br/>
                <br/>
                <img
                        t-if="doc.qr_code"
                        style="display:block;margin:10% auto 0 auto;"
                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', doc.qr_code, 70, 70)"
                />
            </div>
            </div>
        </xpath>

    </template>

</odoo>