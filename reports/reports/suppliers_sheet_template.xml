<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_supplier_sheet_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header"/>
                    <div class="footer"/>
                    <div class="page" style="font-size : 22px">

                        <div class="row">
                            <div class="col-4">
                                <img
                                        t-att-src="'/logo.png?o.company_id=%s' % o.company_id"
                                        style="padding: 0px; margin: 0px; height: 110px; width: 150px;"
                                        t-att-alt="'%s' % o.company_id.name"
                                />
                            </div>
                            <div class="col-4">
                                <br/>
                                <center>
                                    <h3>Fiche de sélection<br/>des fournisseur
                                    </h3>
                                </center>
                            </div>
                            <div class="col-4 text-right" style="font-size: 15px;">
                                <br/>
                                ENR.ACH.02
                                <br/>
                                Révision : A<br/>Date
                                <span t-esc="time.strftime('%d/%m/%Y')"/>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div>Fournisseur :
                            <span t-field="o.name"/>
                        </div>
                        <br/>
                        <br/>
                        <table border="2" width="100%">
                            <tr class="text-center" style="background-color: #edfdcb">
                                <td width="10%">N°</td>
                                <td width="60%">Critères</td>
                                <td width="30%">Pondérati<br/>on
                                </td>

                            </tr>
                            <tr>
                                <td class="text-center">1</td>
                                <td>Prix</td>
                                <td width="30%">
                                    <span t-field="o.price"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">2</td>
                                <td>Delai Livrasion</td>
                                <td width="30%">
                                    <span t-field="o.delais"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">3</td>
                                <td>Qualité</td>
                                <td width="30%">
                                    <span t-field="o.quality"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">4</td>
                                <td>Capacité de production</td>
                                <td width="30%">
                                    <span t-field="o.production_capacity"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">5</td>
                                <td>Localisation géographique</td>
                                <td width="30%">
                                    <span t-field="o.location"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">6</td>
                                <td>Capacité technique</td>
                                <td width="30%">
                                    <span t-field="o.technical_capacity"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">7</td>
                                <td>Gestion et organisation</td>
                                <td width="30%">
                                    <span t-field="o.management_organization"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">8</td>
                                <td>Réputation et Postion dans l'industrie</td>
                                <td width="30%">
                                    <span t-field="o.reputation_position"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">9</td>
                                <td>Situation financiére</td>
                                <td width="30%">
                                    <span t-field="o.financial_situation"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">10</td>
                                <td>Assistance</td>
                                <td width="30%">
                                    <span t-field="o.assistance"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">11</td>
                                <td>Systeme de communication</td>
                                <td width="30%">
                                    <span t-field="o.communication_systeme"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">12</td>
                                <td>Impression</td>
                                <td width="30%">
                                    <span t-field="o.impression"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">13</td>
                                <td>Désir de faire des affaires</td>
                                <td width="30%">
                                    <span t-field="o.do_business"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">14</td>
                                <td>Garantie et SAP</td>
                                <td width="30%">
                                    <span t-field="o.sap"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">15</td>
                                <td>Conditionde paiement</td>
                                <td width="30%">
                                    <span t-field="o.condition"/>
                                </td>
                            </tr>
                            <tr>

                                <td colspan="2" style="background-color: #edfdcb" class="text-center">Score Total</td>
                                <td style="background-color: #6B9936">
                                    <span t-field="o.total"/>
                                </td>


                            </tr>
                        </table>
                        <br/>
                        <br/>
                        <div class="row"> <div class="col-10">
                        <table border="2" width="50%" style="background-color: #edfdcb">
                            <tr>
                                <td colspan="2" class="text-center">Légende</td>
                            </tr>
                            <tr>
                                <td width="20%" class="text-center">0</td>
                                <td width="80%">Non Applicable</td>
                            </tr>
                            <tr>
                                <td width="20%" class="text-center">1</td>
                                <td width="80%">Faible</td>
                            </tr>
                            <tr>
                                <td width="20%" class="text-center">2</td>
                                <td width="80%">Moyenne</td>
                            </tr>
                            <tr>
                                <td width="20%" class="text-center">3</td>
                                <td width="80%">Exellent</td>
                            </tr>
                        </table>
                        </div>
                        <div class="col-2">
                            <br/>
                            <img
                                    t-if="o.qr_code"
                                    style="display:block;margin:10% auto 0 auto;"
                                    t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.qr_code, 100, 100)"
                            />


                        </div>
                    </div>
                    </div>
                    <br/>

                </t>
            </t>
        </t>
    </template>

    <record id="paperformat_custom" model="report.paperformat">
        <field name="name">qweb paperformat</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">20</field>
        <field name="margin_right">20</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">1</field>
        <field name="dpi">110</field>
    </record>


    <record id="action_supplier_sheet" model="ir.actions.report">
        <field name="name">Fiche de sélection des fournisseurs</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="paperformat_id" ref="paperformat_custom"/>
        <field name="report_name">reports.report_supplier_sheet_template</field>
        <field name="report_file">reports.report_supplier_sheet_template</field>
        <field name="print_report_name">'Fiche de sélection des fournisseurs'</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
