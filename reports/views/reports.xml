<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <menuitem id="custom_reports_menu_root" name="Rapports"/>

    <record id="reception_control_form" model="ir.ui.view">
        <field name="name">reception.control.form</field>
        <field name="model">reception.control</field>
        <field name="arch" type="xml">
            <form delete="0" create="0">
                <sheet>
                    <button
                            name="print_report"
                            string="Imprimer Controle à la réception"
                            type="object"
                            class="oe_highlight"
                            icon="fa-print"
                    />
                </sheet>
            </form>
        </field>
    </record>

    <record id="reception_control_action" model="ir.actions.act_window">
        <field name="name">Controle à la réception</field>
        <field name="res_model">reception.control</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="reception_control_form"/>
        <field name="target">inline</field>
    </record>

    <menuitem id="reception_control_menu"
              name="Rapport de controle"
              parent="custom_reports_menu_root"
              action="reception_control_action"/>

    <record id="supplier_sheet_form" model="ir.ui.view">
        <field name="name">supplier.sheet.form</field>
        <field name="model">supplier.sheet</field>
        <field name="arch" type="xml">
            <form delete="0" create="0">
                <sheet>
                    <button
                            name="print_report"
                            string="Imprimer Fiche de sélection des fournisseurs"
                            type="object"
                            class="oe_highlight"
                            icon="fa-print"
                    />
                </sheet>
            </form>
        </field>
    </record>

    <record id="supplier_sheet_action" model="ir.actions.act_window">
        <field name="name">Fiche de sélection des fournisseurs</field>
        <field name="res_model">supplier.sheet</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="supplier_sheet_form"/>
        <field name="target">inline</field>
    </record>

    <menuitem id="supplier_sheet_menu"
              name="Rapport de Fiche de sélection des fournisseurs"
              parent="custom_reports_menu_root"
              action="supplier_sheet_action"/>
</odoo>