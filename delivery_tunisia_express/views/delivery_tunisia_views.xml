<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="view_delivery_carrier_form_with_provider_tunisia" model="ir.ui.view">
    <field name="name">delivery.carrier.form.provider.tunisia</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='destination']" position="before">
        <page string="tunisia Configuration" name="tunisia_configuration" attrs="{'invisible': [('delivery_type', '!=', 'tunisia')]}">
          <group>
            <group>
              <field name="tunisia_account_number" attrs="{'required': [('delivery_type', '=', 'tunisia')]}"/>
              <field name="user_name" attrs="{'required': [('delivery_type', '=', 'tunisia')]}"/>
              <field name="destinataire" attrs="{'required': [('delivery_type', '=', 'tunisia')]}"/>
              <field name="tunisia_developer_password" attrs="{'required': [('delivery_type', '=', 'tunisia')]}"/>
              <field name="tunisia_delivery_nature" attrs="{'required': [('delivery_type', '=', 'tunisia')]}"/>
              <field name="tunisia_shipment_type" attrs="{'required': [('tunisia_delivery_nature', '=', 'International')], 'invisible': [('tunisia_delivery_nature', 'not in', 'International')]}"/>
              <field name="tunisia_parcel_return_instructions" attrs="{'required': [('tunisia_delivery_nature', '=', 'International')], 'invisible': [('tunisia_delivery_nature', 'not in', 'International')]}"/>
            </group>
            <group>
              <field name="tunisia_domestic_deliver_type" string="Tunisia Package Type" attrs="{'required': [('tunisia_delivery_nature', '=', 'Domestic')], 'invisible': [('tunisia_delivery_nature', 'not in', 'Domestic')]}"/>
              <field name="tunisia_international_deliver_type" string="Tunisia Package Type" attrs="{'required': [('tunisia_delivery_nature', '=', 'International')], 'invisible': [('tunisia_delivery_nature', 'not in', 'International')]}"/>
              <field name="tunisia_label_stock_type" string="Label Type" attrs="{'required': [('delivery_type', '=', 'tunisia')]}"/>
              <field name="tunisia_label_format" string="Label Format" attrs="{'required': [('delivery_type', '=', 'tunisia')]}"/>
            </group>
            <field name="can_generate_return" invisible="1"/>
            <!-- Hide Options group if no visible fields inside it. -->
            <group string="Options" attrs="{'invisible': [('can_generate_return', '=', False), ('tunisia_delivery_nature', 'not in', 'Domestic')]}">
              <field name="tunisia_saturday" attrs="{'invisible': [('tunisia_delivery_nature', 'not in', 'Domestic')]}"/>
              <field name="return_label_on_delivery" attrs="{'invisible': [('can_generate_return', '=', False)]}"/>
              <field name="get_return_label_from_portal" attrs="{'invisible': [('return_label_on_delivery', '=', False)]}"/>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
