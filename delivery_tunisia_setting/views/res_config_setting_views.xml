<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="res_config_settings_view_form_sale_tunisia" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.tunisia.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='shipping_costs_easypost']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="shipping_costs_tunisia" groups="sales_team.group_sale_manager">
                    <div class="o_setting_left_pane">
                        <field name="module_delivery_tunisia_express" widget="upgrade_boolean" execute="module_delivery_tunisia_express"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_delivery_tunisia_express"/>
                        <div class="text-muted">
                            Compute shipping costs and ship with Tunisia
                        </div>
                        <div class="content-group">
                            <div id="sale_delivery_tunisia"/>
                        </div>
                        <div class="content-group">
                            <div class="mt8" attrs="{'invisible': [('module_delivery_tunisia_express','=',False)]}">
                                <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="Tunisia Shipping Methods" class="btn-link" context="{'search_default_delivery_type': 'tunisia'}"/>
                            </div>
                        </div>
                    </div>
                </div>
             </xpath>
        </field>
    </record>
    <record id="res_config_settings_view_form_stock_tunisia" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='compute_shipping_costs_easypost']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="shipping_costs_tunisia">
                    <div class="o_setting_left_pane">
                        <field name="module_delivery_tunisia_express" widget="upgrade_boolean" execute="module_delivery_tunisia_express"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_delivery_tunisia_express"/>
                        <div class="text-muted">
                            Compute shipping costs and ship with Tunisia
                        </div>
                        <div class="content-group">
                            <div id="sale_delivery_tunisia"/>
                        </div>
                        <div class="content-group">
                            <div class="mt8" attrs="{'invisible': [('module_delivery_tunisia_express','=',False)]}">
                                <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="Tunisia Shipping Methods" class="btn-link" context="{'search_default_delivery_type': 'tunisia'}"/>
                            </div>
                        </div>
                    </div>
                </div>
             </xpath>
        </field>
    </record>

    </data>
</odoo>